{% extends 'base.html.twig' %}

{% block title %}Alumno{% endblock %}

{% block modals %}
    {{ include('/modals/edit_student_modal.html.twig') }}
    {{ include('/modals/add_parent_modal.html.twig') }}
    {{ include('/modals/edit_parent_modal.html.twig') }}
{% endblock %}

{% block action_panel %}
    <button class="defaultButton" type="button" onclick="openEditStudentDialog()">Editar alumno</button>
    <button class="defaultButton" type="button" onclick="openAddParentDialog()">Añadir padre</button>
    <button class="warningButton actionPanelRightButton" type="button" onclick="deleteStudent()">Eliminar alumno</button>
{% endblock %}

{% block main_title %}
    <h1>Alumno: <span id="studentFullName">Faustino Rodríguez</span></h1>
    <hr/>
{% endblock %}

{% block main_filters %}
{% endblock %}

{% block main_content %}
    <div id="studentInfoDiv">
        <h2>Información del alumno</h2>
        <ul id="studentInfo">
            <li><b>Nombre: </b><span id="studentName">Faustino</span></li>
            <li><b>Apellidos: </b><span id="studentSurname">Rodríguez</span></li>
            <li><b>Curso: </b><span id="studentClass">1ºB</span></li>
            {#<li><b>Fecha de nacimiento: </b>10/02/2010</li>#}
            {#<li><b>Teléfono: </b>928 45 84 10</li>#}
            {#<li><b>Dirección: </b>C/ Desengaño, Nº21, 1ºA</li>#}
        </ul>
    </div>

    <br/>
    <div id="parentsDiv">
        <h2>Padres</h2>
        <table class="table" id="parentsTable">
            <tr>
                <th>DNI</th>
                <th>Nombre</th>
                <th>Teléfono</th>
            </tr>
            <tr>
                <td>46584312V</td>
                <td>Eusebio Rodríguez Feo</td>
                <td>645849351</td>
                <td class="tableButton">
                    <button class="primaryButton" onclick="openEditParentDialog(this)">Editar</button>
                </td>
                <td class="tableButton">
                    <button class="warningButton" onclick="deleteParent(this)">Eliminar</button>
                </td>
            </tr>
            <tr>
                <td>42516978W</td>
                <td>Eulalia Sanz Martínez</td>
                <td>615498476</td>
                <td class="tableButton">
                    <button class="primaryButton" onclick="openEditParentDialog(this)">Editar</button>
                </td>
                <td class="tableButton">
                    <button class="warningButton" onclick="deleteParent(this)">Eliminar</button>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(".modal").eq(0).attr("id", "editStudentModal");
        $(".modal").eq(1).attr("id", "addParentModal");
        $(".modal").eq(2).attr("id", "editParentModal");
    </script>
{% endblock %}