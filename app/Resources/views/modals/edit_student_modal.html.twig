{% extends 'modals/modal.html.twig' %}

 {% block modal_header %}
     Editar alumno
 {% endblock %}

{% block modal_body %}
    Nombre<br/>
    <input class="modalInput" id="studentNameInput" type="text" value="Faustino">
    <br/><br/>
    Apellidos<br/>
    <input class="modalInput" id="studentSurnameInput" type="text" value="Rodríguez">
    <br/><br/>
    Curso<br/>
